<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- צבע הרקע -->
    <solid android:color="#FF6200EE" />

    <!-- גבולות עגולים (כדי שיהיה מרובע, נשאיר 0dp או לא נשתמש) -->
    <corners android:radius="30dp" />

    <!-- גבול מסביב לכפתור -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- שוליים פנימיים -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>